rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Bug Reports - Anyone can create, only admins can read/update
    match /bugReports/{reportId} {
      // Allow anyone (including guests) to create bug reports
      allow create: if true;

      // Only allow reading/updating for authenticated users (you can restrict this to admin emails)
      allow read, update: if request.auth != null;

      // Prevent deletion
      allow delete: if false;
    }

    // Sold Prices - Proprietary database for pricing intelligence
    match /soldPrices/{priceId} {
      // Anyone authenticated (including guests with temporary auth) can submit sold prices
      allow create: if request.auth != null;

      // Only authenticated users can read (for building pricing models)
      // In production, restrict this to admin only
      allow read: if request.auth != null;

      // No updates or deletions - data integrity is critical
      allow update, delete: if false;
    }

    // User profiles
    match /users/{userId} {
      // Users can read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User's item history
      match /items/{itemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ============================================================================
    // ANALYTICS & ACTIVITY TRACKING COLLECTIONS
    // ============================================================================

    // Helper function to check if user is admin
    // UPDATE THIS with your admin email(s)
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email in [
               'contact@precisionprices.com',
               'ericalmlowe@gmail.com'
               // Add more admin emails here
             ];
    }

    // Sessions collection - users can create their own sessions
    match /sessions/{sessionId} {
      // Allow anyone to create a session (including guests)
      allow create: if true;

      // Allow read/update for:
      // - Admin (can read all sessions)
      // - Session owner
      // - Guest sessions (no userId)
      allow read, update: if isAdmin() ||
                            resource.data.userId == null ||
                            (request.auth != null && resource.data.userId == request.auth.uid);

      // Prevent deletion
      allow delete: if false;
    }

    // Activities collection - users can log their own activities
    match /activities/{activityId} {
      // Allow anyone to create activities (including guests)
      allow create: if true;

      // Allow read for:
      // - Admin (can read all activities)
      // - Activity owner
      // - Guest activities (no userId)
      allow read: if isAdmin() ||
                     resource.data.userId == null ||
                     (request.auth != null && resource.data.userId == request.auth.uid);

      // Prevent updates and deletes
      allow update, delete: if false;
    }

    // Daily analytics - read-only for authenticated users
    match /analytics_daily/{dateId} {
      // Allow authenticated users to read daily stats
      allow read: if request.auth != null;

      // Allow admin to write aggregated data
      allow create, update: if isAdmin();

      // Prevent deletion
      allow delete: if false;
    }

    // User stats - users can read/write their own stats, admin can read all
    match /user_stats/{statsId} {
      // Allow users to read and update their own stats
      // Allow admin to read all stats
      allow read: if isAdmin() ||
                     (request.auth != null && resource.data.userId == request.auth.uid);

      allow create, update: if request.auth != null &&
                               resource.data.userId == request.auth.uid;

      // Prevent deletion
      allow delete: if false;
    }

    // Feedback collection - allow authenticated users to submit feedback
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // ============================================================================
    // FEEDBACK SYSTEM COLLECTIONS (New)
    // ============================================================================

    // Temporary listings - track items for feedback collection
    match /listings_temp/{listingId} {
      // Allow anyone to create/read/update temp listings (session-based tracking)
      allow create: if true;
      allow read: if true;
      allow update: if true;

      // Prevent deletion (data integrity)
      allow delete: if false;
    }

    // Feedback events - collect price accuracy and transaction outcomes
    match /feedback_events/{eventId} {
      // Allow anyone to submit feedback (including guests)
      allow create: if true;

      // Allow read for:
      // - Admin (can read all feedback)
      // - Authenticated users (can read their own)
      allow read: if isAdmin() ||
                     (request.auth != null);

      // Prevent updates and deletes (data integrity)
      allow update, delete: if false;
    }

    // ============================================================================
    // FACEBOOK MARKETPLACE LISTINGS - PUBLIC SHAREABLE LISTINGS
    // ============================================================================

    // Listings collection - public shareable listings for Facebook Marketplace
    match /listings/{listingId} {
      // Anyone can read listings (public shareable links)
      allow read: if true;

      // Anyone (including guests) can create listings
      allow create: if true;

      // Only the owner or admin can update
      allow update: if isAdmin() ||
                       (request.auth != null &&
                        resource.data.userId == request.auth.uid);

      // Only admin can delete
      allow delete: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
