rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Bug Reports - Anyone can create, only admins can read/update
    match /bugReports/{reportId} {
      // Allow anyone (including guests) to create bug reports
      allow create: if true;

      // Only allow reading/updating for authenticated users (you can restrict this to admin emails)
      allow read, update: if request.auth != null;

      // Prevent deletion
      allow delete: if false;
    }

    // User profiles
    match /users/{userId} {
      // Users can read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User's item history
      match /items/{itemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
